@model BO.Pizza

<h4>Pizza</h4>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>

    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Nom)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Nom)
    </dd>

    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Pate.Nom)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Pate.Nom)
    </dd>


    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => Model.Ingredients)
    </dt>
        @foreach(var ingredient in Model.Ingredients)
        {
            <p>@ingredient.Nom</p>
        }
    <dd class = "col-sm-10">
        @*@Html.DisplayFor(model => model.Ingredients)*@
    </dd>

</dl>